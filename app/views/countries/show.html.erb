<div class="container">
  <h1 class="mb-4">Welcome to Switzerland!</h1>

  <div class="input-group rounded mb-4">
    <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
    <span class="input-group-text border-0" id="search-addon">
      <i class="fas fa-search"></i>
    </span>
  </div>

  <div class="row gy-5 justify-content-center">
    <div class="col-6 topic-card">
      <%= link_to "#" do %>
        <div class="tile">
          <div class="tile--icon">
            <i class="fa-solid fa-list-check"></i>
          </div>
          <div class="tile--title"> <!-- use this title for search bubby -->
            My tasks
          </div>
        </div>
      <% end %>
    </div>


    <div class="col-6 topic-card">
      <%= link_to (current_user.user_profile.nil? ? new_user_profile_path : edit_user_profile_path(current_user)) do %>
        <div class="tile">
          <div class="tile--icon">
            <i class="fa-solid fa-user"></i>
          </div>
          <div class="tile--title"> <!-- move your fat eyes here -->
            My profile
          </div>
        </div>
      <% end %>
    </div>

    <% Topic.order(:title).each do |topic| %>
      <%= render "countries/topic_card", topic: topic %>
    <% end %>
  </div>
</div>
