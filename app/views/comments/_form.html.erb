<div class="container">
  <%= simple_form_for [topic.country, topic, comment] do |f| %>
    <%= f.input :title, label: "Title" %>
    <%= f.input :content, label: "Content" %>
    <%= f.button :submit, "Submit", class: "btn btn-primary text-white" %>
    <%= link_to "Back", country_topic_path(topic.country, topic), class: "text-decoration-none btn btn-primary" %>
  <% end %>
</div>
