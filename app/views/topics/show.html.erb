<%= link_to ('<i class="fa-regular fa-hand-point-left"></i> Go back').html_safe, country_path(@topic.country), class: "btn form-actions my-3" %>
<div class="card-category mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1450101499163-c8848c66ca85?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1770&q=80)">
  <%# <img <%=@topic.image%>
  <h1><%=@topic.title%></h1>
</div>
<div class="topics-content container">
  <p><%= @topic.content %></p>
</div>
<hr>


<div class="container">
  <h5 class="text-center">Comment Section</h5></div>
  <div class="text-center">
    <% if user_signed_in? %>
      <%= link_to "New comment",
                          new_country_topic_comment_path(@country, @topic, @comment),
                          class: "btn btn-primary",
                          data: { turbo_frame: "new_comment" } %>
  </div>
    <% else %>
      <%= link_to "Log in to comment", root_path, class: "btn btn-primary" %>
    <% end %>

    <%= turbo_frame_tag "new_comment" %>

    <%= turbo_frame_tag "comments" do %>
      <%#= render @topic.comments.mango_order %>
      <% @topic.comments.mango_order.each do |comment| %>
        <%= render "comments/comment", comment: comment %>
      <% end %>
    <% end %>
</div>
