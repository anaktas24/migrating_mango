<div style="background-image: url('/assets/homepage2.jpeg'" class="background-home">
</div>

<div id="screen">
  <div id="header"><h1 class="pt-3">MIGRATING MANGO</h1></div>
  <div class="container container-planet">
    <div class="row justify-content-center">
      <div class="col-12">
        <div class="container container-home">
          <div class="clouds"></div>
          <div class="planet"></div>
          <a href="countries/1">
            <div class="swiss">
              <div class="fflag fflag-CH ff-xl ff-sphere ff-xl"></div>
            </div>
          </a>
          <a href="countries/3">
            <div class="romania">
              <div class="fflag fflag-RO ff-xl ff-sphere ff-xl"></div>
            </div>
          </a>
          <a href="countries/4">
            <div class="greece">
              <div class="fflag fflag-GR ff-xl ff-sphere ff-xl"></div>
            </div>
          </a>
          <a href ="countries/2">
            <div class="uk">
              <div class="fflag fflag-GB ff-xl ff-sphere ff-xl"></div>
            </div>
          </a>
          <a href="countries/5">
            <div class="lebanon">
              <div class="fflag fflag-LB ff-xl ff-sphere ff-xl"></div>
            </div>
          </a>
          <div class="up"></div>
        </div>
      </div>
    </div>
  </div>
  <div class="container-home">
    <div>
      <div id="select-country" class="w-100"><em>Click on the flag or use the dropdown to select your country...</em></div>
      <div class="dropdown text-center w-100">
        <a class="btn btn-secondary dropdown-toggle dropdown w-80" id="country-dropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
          Country
        </a>

        <ul class="dropdown-menu">

          <% @countries.each do |country| %>
            <li>
              <a class="dropdown-item" href="countries/<%= country.id %>"><%= country.name %></a>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="d-flex justify-content-center login">
      <div class="card card-transparent">
        <div class="card-body">
          <% if !current_user %>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
              <div class="form-inputs">
                  <%= f.input :email,
                                required: false,
                                autofocus: true,
                                autocomplete: "email",
                                label: ('<i class="fas fa-user text-warning mt-3" style="width: 25px;"></i>').html_safe,
                                wrapper_html: { class: 'd-flex text-align-center align-middle' },
                                placeholder: "Email" %>
                  <%= f.input :password,
                              required: false,
                              autocomplete: "current-password",
                              label: ('<i class="fas fa-key text-warning mt-3" style="width: 25px;"></i>').html_safe,
                              wrapper_html: { class: 'd-flex text-align-center align-middle' },
                              placeholder: "Password"%>
                  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>
              <div class="d-inline-flex w-100 justify-content-around">
                <div class="form-actions">
                  <%= f.button :submit, "Log in", class: "log-in-button px-4" %>
                </div>
                <%= link_to "Sign up", new_user_registration_path, class: "btn log-in-button px-4" %>
              </div>
            <% end %>
          <% else %>
            <div class="d-flex justify-content-center h-0 login">
              <%= link_to "Continue", country_path(1), class: "btn log-in-button mt-5 px-4 justify-content-center" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
