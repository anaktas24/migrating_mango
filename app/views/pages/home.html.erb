<div id="screen">
  <div id="header"><h1>MIGRATING MANGO</h1></div>
  <div id="select-country"><em>Select your country by clicking on the flag</em></div>
  <div class="container container-home">
    <div class="row justify-content-center">
      <div class="col-12">
        <div class="container container-home">
          <div class="clouds"></div>
          <div class="planet"></div>
          <a href="countries/1"><div class="swiss"></div></a>
          <div class="greece"></div>
          <div class="romania"></div>
          <div class="uk"></div>
          <div class="lebanon"></div>
          <div class="up"></div>
        </div>
      </div>
    </div>
  </div>
  <div class="container-home">
    <div class="d-flex justify-content-center h-40 login">
      <div class="card">
        <div class="card-body">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
            <div class="form-inputs">
              <span><i class="fas fa-user text-warning"></i></span>
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          autocomplete: "email" %>
              <span><i class="fas fa-key text-warning"></i></span>
              <%= f.input :password,
                          required: false,
                          autocomplete: "current-password"%>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "Log in" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
