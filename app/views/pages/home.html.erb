<div id="screen">
  <div id="header"><h1>MIGRATING MANGO</h1></div>
  <div id="select-country"><em>Select your country by clicking on the flag</em></div>
  <div class="container container-home">
    <div class="row justify-content-center">
      <div class="col-12">
        <div class="container container-home">
          <div class="clouds"></div>
          <div class="planet"></div>
          <a href="countries/1">
            <div class="swiss">
              <div class="fflag fflag-CH ff-xl ff-sphere ff-xl"></div>
            </div>
          </a>
          <div class="romania">
          </div>
          <div class="greece">
          </div>
          <div class="uk">
          </div>
          <div class="lebanon">
          </div>
          <div class="up"></div>
        </div>
      </div>
    </div>
  </div>
  <div class="container-home">
    <div class="d-flex justify-content-center h-40 login">
      <div class="card">
        <div class="card-body">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
            <div class="form-inputs">
              <div class="d-flex">
                <%= f.input :email,
                              required: false,
                              autofocus: true,
                              autocomplete: "email",
                              label: ('<i class="fas fa-user text-warning"></i>').html_safe,
                              class: "d-inline-flex w-100 justify-content-betwee",
                              placeholder: "Email" %>
              </div>
              <div class="d-flex">
                <%= f.input :password,
                            required: false,
                            autocomplete: "current-password",
                            label: ('<i class="fas fa-key text-warning"></i>').html_safe,
                            class: "d-inline-flex w-100 justify-content-betwee",
                            placeholder: "Password"%>
              </div>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
            <div class="d-inline-flex w-100 justify-content-between">
              <div class="form-actions">
                <%= f.button :submit, "Log in", class: "log-in-button px-4" %>
              </div>
              <%= link_to "Sign up", new_user_registration_path, class: "btn log-in-button px-4" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
